      <div class="center">
      <div class="row">
          <form action="/signup" method="post" class="col s12 m6">
            <div class="row">
              <div class="input-field col s12 m6">
                <input type="text" name="firstname" placeholder="First Name">
                <label for="first_name">First Name</label>
              </div>
              <div class="input-field col s12 m6">
                <input type="text" name="lastname" placeholder="Last Name">
                <label for="last_name">Last Name</label>
              </div>
            </div>
            <div class="row">
              <div class="input-field col s13 m6">
                <input type="text" name="city" placeholder="city">
                <label for="city">City</label>
              </div>
              <div class="input-field col s12 m6">
                <input type="text" name="state" placeholder="state">
                <label for="state">State</label>
              </div>
            </div>
            <div class="row">
              <div class="input-field col s12 m6">
                <input type="text" name="username" placeholder="username" class="grey-text text-black" class="validate">
                <label for="username">Username</label>
              </div>
              <div class="input-field col s12 m6">
                <input type="password" name="password" placeholder="password">
                <label for="password">Password</label>
              </div>
            </div>
            <div class="row">
              <div class="input-field col s12 m6">
                <input type="date" name="birthdate">
                <label class="active" for="birthdate">Birthday</label>
              </div>
            </div>
            <div class="row">
              <div class="col s12 m6">
                <div class="input-field inline">
                  <div>
                    <button class="btn waves-effect waves-light" type="submit" name="action">Submit
                      <i class="material-icons center"></i>
                    </button>
                  </div>
                </div>
              </div>
            </div>
          </form>
          <div class="row">
            <div class="col s12"></div>
            <div class="col s7 push-s5 font-size" id="artistName"></div>
            <!-- <br>
            <div class="col s5 pull-s7 collection" id="artistEvents"></div> -->
          </div>
        </div>
